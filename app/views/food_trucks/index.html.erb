<h2>Food Trucks List</h2>
<% if current_user && current_user.avatar.url %>
  <%= image_tag(current_user.avatar.url) %>
<% end %>

<%= form_tag(food_trucks_path, method: "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% @food_trucks.each do |truck| %>
    <li><%= link_to truck.name, food_truck_path(truck) %></li>
  <% end %>
</ul>

<%= paginate @food_trucks %>
