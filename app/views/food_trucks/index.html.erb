<!-- Warming Up -->
<link href='http://fonts.googleapis.com/css?family=Buenard:700' rel='stylesheet' type='text/css'>
<script src="http://pupunzi.com/mb.components/mb.YTPlayer/demo/inc/jquery.mb.YTPlayer.js"></script>

<script>
  $(document).ready(function () {
      $(".player").mb_YTPlayer();
  });
</script>
<!--Video Section-->
<div class="beep">
  <section class="content-section video-section">
    <div class="pattern-overlay">
    <a id="bgndVideo" class="player" data-property="{videoURL:'http://www.youtube.com/watch?v=gOzcW3xpa70',containment:'.video-section', quality:'large', autoPlay:true, mute:true, opacity:1}">bg</a>
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
          <h1>Food Trucks</h1>
          <h3>Boston, MA</h3>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
          <%= form_tag(food_trucks_path, method: "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search For Trucks" %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>
</div>
<!--Video Section Ends Here-->
<div class="centerT">
  <table class="table table-hover">
    <thead>
      <tr class="table_header">
        <th>Food Trucks List</th>
      </tr>
    </thead>
    <tbody>
      <% @food_trucks.each do |truck| %>
        <tr>
          <td style="width:100%"><%= link_to truck.name, food_truck_path(truck) %></td>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<div class="cent">
  <%= paginate @food_trucks %>
</div>
